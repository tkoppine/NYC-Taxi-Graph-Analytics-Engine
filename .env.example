# Configuration
NEO4J_URI=neo4j://localhost:7687  # Neo4j database connection URI (change host if using remote database)
NEO4J_USER=neo4j                  # Neo4j username (default is 'neo4j')
NEO4J_PASSWORD=YOUR_NEO4J_PASSWORD_HERE  # Replace with your Neo4j database password

# Data Processing
DATA_FILE=yellow_tripdata_2022-03.parquet  # NYC taxi trip data file name
CSV_EXPORT_PATH=/var/lib/neo4j/import/     # Path where Neo4j can access CSV files

# Graph Algorithm Parameters
PAGERANK_MAX_ITERATIONS=20        # Maximum iterations for PageRank algorithm
PAGERANK_DAMPING_FACTOR=0.85      # Damping factor for PageRank (0.85 is standard)

# Connection Settings
MAX_RETRY_ATTEMPTS=10             # Number of connection retry attempts
RETRY_DELAY_SECONDS=10            # Delay between retry attempts in seconds

# Bronx Taxi Zone IDs (DO NOT MODIFY - predefined NYC taxi zones for Bronx borough)
BRONX_ZONES=3,18,20,31,32,46,47,51,58,59,60,69,78,81,94,119,126,136,147,159,167,168,169,174,182,183,184,185,199,200,208,212,213,220,235,240,241,242,247,248,250,254,259

# Data Filters
MIN_TRIP_DISTANCE=0.1             # Minimum trip distance in miles to include
MIN_FARE_AMOUNT=2.5               # Minimum fare amount in dollars to include